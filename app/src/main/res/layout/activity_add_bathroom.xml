<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.thrones.AddBathroom"
    android:background="#ffffff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NOTE:\nPlease be at the location you are going to add.  After you add this bathroom you will be taken to review it."
        android:textColor="#ff8300"
        android:textSize="25dp"
        android:background="#ffffff"
        android:id="@+id/instructions"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#ff8300"
        android:textSize="25dp"
        android:text="WARNING:\nIf this is not your address or if google maps cannot find you please do not submit this."
        android:id="@+id/warning"
        android:layout_below="@+id/instructions"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#ff8300"
        android:textSize="25dp"
        android:text="Address:\nGoogle cannot find you!"
        android:id="@+id/location"
        android:layout_below="@+id/warning"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="I understand"
        android:background="#ff8300"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="submitPlace"/>


</RelativeLayout>
